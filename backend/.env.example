PORT=5000
# Python backend (LLM/ML service) endpoint to forward requests to
# Example: http://localhost:8000/analyze
PYTHON_BACKEND_URL=

# Optional: VCF validator service endpoint (if used)
PYTHON_VALIDATOR_URL=

# Forwarding behavior
# Timeout in milliseconds for each forward attempt
FORWARD_TIMEOUT_MS=10000
# Number of retries (0 = single try)
FORWARD_RETRIES=2

# CORS (comma-separated list of allowed origins). Example:
# CORS_ORIGIN=https://your-frontend.vercel.app
CORS_ORIGIN=

# Optional: Enables /api/chat endpoint via Groq
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-20b
